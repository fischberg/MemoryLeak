<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MemoryLeak.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                Source="dotnet_bot.png"
                SemanticProperties.Description="Cute dot net bot waving hi to you!"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <Button
                x:Name="Button1"
                Text="Display Using CollectionView"
                Clicked="OnButton1Clicked"
                HorizontalOptions="Center" />

            <Button
                x:Name="Button2"
                Text="Display Not Using CollectionView"
                Clicked="OnButton2Clicked"
                HorizontalOptions="Center" />

            <Button
                x:Name="Button3"
                Text="Display ObservableCollection Using CollectionView"
                Clicked="Button3_Clicked"
                HorizontalOptions="Center" />


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

